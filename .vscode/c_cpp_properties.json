{
    "configurations": [
        {
            "name": "Linux-Drogon-JWT",
            "includePath": [
                "${workspaceFolder}/**",                                 // your project headers: include/, controllers/, models/
                "/usr/include",                                          // standard system headers
                "/usr/local/include",                                    // system-wide headers (Drogon may be here)
                "/home/xybuild/vcpkg/installed/x64-linux/include",      // vcpkg headers (Drogon, bcrypt, nlohmann/json, jwt-cpp)
                "/usr/include/postgresql",                               // if using PostgreSQL dev headers
                "/usr/include/openssl"                                   // OpenSSL headers for JWT signing
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "/usr/include",
                    "/usr/local/include",
                    "/home/xybuild/vcpkg/installed/x64-linux/include"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}


